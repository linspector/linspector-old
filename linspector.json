        "all":
        {
            "members": ["admin"],
            "hosts": ["hanez"],
            "parent": "network",
            "threshold": 10,
            "services":
            {
            	"load": ["twentyfourseven"],
            	"discusage":["twentyfourseven"],
                "ping": ["do_every_x_times"]
            }
        }
    },
    "layouts": {"production": {"hostgroups": ["all", "hanez", "network"], "enabled": true},
                "lazy":       {"hostgroups": ["hanez", "ruff"], "enabled": false}
    },
    "core": {
