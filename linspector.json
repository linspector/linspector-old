    "periods":
    {
        "twentyfourseven":
        {
            "year": "*",
            "month": "*",
            "day": "*",
            "week": "*",
            "hour": "*",
            "minute": "*/1",
            "second": "0",
            "comment": "Cron Job / Every minute"
        },
        "do_every_x_times" : {
            "days": 0,
            "weeks": 0,
            "hours": 0,
            "minutes": 0,
            "seconds": 10,
            "comment": "Interval Job / Every 10 seconds"
        },
        "next_christmas" : {
            "date": "2013-12-24 20:00:00",
            "comment": "Date Job / Just one day"
        }
    },
