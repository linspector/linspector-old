{
    "members":{
        "root":{
            "_name": "root",
            "tasks": [
                {
                    "class": "storage/logger",
                    "type": [ "ok", "warning", "error" ],
                    "args": { "directory": "/tmp/", "file": "data.log" }
                }
            ]
        }
    },
    "periods": {
        "fast": { "seconds": 15 },
        "medium": { "seconds": 120 },
        "slow": { "seconds": 480 }
    },
    "hostgroups":{
        "a":{
            "members": ["root"],
            "hosts": [ "a"],
            "services":[
                { "class": "etc/dummy", "args": { "sleep": 1, "fail": true }, "periods": ["fast"], "threshold": 1 },
                { "class": "etc/dummy", "args": { "sleep": 1, "fail": false }, "periods": ["fast"], "threshold": 1 }
            ]
        }
    },
    "layouts":{
        "main":{
            "hostgroups": [ "a" ],
            "enabled": true
        }
    },
    "core":{
        "instance_name": "Master Monitor 01 (monitor01.linspector.org)",
        "threshold_handling": "reset",
        "shutdown_wait": false,
        "members": [ "linspector", "root" ],
        "jsonrpc_backend": true,
        "backends": {
            "jsonrpc": {
                "host": "127.0.0.1",
                "port": 10123,
                "username": "linspector",
                "password": "linspector"
            }
        }
    }
}
