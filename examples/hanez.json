{
    "members":{
        "hanez":{
            "name": "Johannes Findeisen",
            "tasks": [
                { "class":"email", "type": "email", "args": { "rcpt": "you@hanez.org" }}
            ]
        }
    },
    "periods": {
        "always": { "seconds": 2 }
    },
    "hostgroups":{
        "servers":{
            "members": ["hanez"],
            "hosts": [ "a.systemchaos.org", "b.systemchaos.org" ],
            "services":[
                {
                    "class": "tcpconnect",
                    "args": { "port": 80 },
                    "periods": ["always"],
                    "threshold": 5
                }
            ]
        }
    },
    "layouts":{
        "main":{
            "hostgroups": ["servers"],
            "enabled": true
        }
    }
}